public class Heroi {

	public static void main(String[] args) {

		String nome = "Everaldo";
		Integer idade = 30;
		String tipo = "ninja";
		String ataque = atacar(tipo);

		System.out.print("O " + tipo + " atacou usando " + ataque);

	}

	public static String atacar(String tipo) {
		String ataque = "";

		switch (tipo) {
		case "mago":
			ataque = "magia";
			break;
		case "guerreiro":
			ataque = "espada";
			break;
		case "monge":
			ataque = "artes marciais";
			break;
		case "ninja":
			ataque = "shuriken";
		}

		return ataque;

	}

}
